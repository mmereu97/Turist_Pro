    def refresh_route_info(self, silent_mode=False):
        """ActualizeazƒÉ informa»õiile (rating, recenzii, status) pentru toate loca»õiile din traseu."""
        global selected_places
        
        # DacƒÉ func»õia e apelatƒÉ de buton (Qt signal), silent_mode poate fi bool-ul 'checked' (False).
        # Ne asigurƒÉm cƒÉ e True doar dacƒÉ specificƒÉm noi explicit.
        is_silent = silent_mode is True
        
        if self.route_list.count() == 0:
            if not is_silent:
                QMessageBox.information(self, "Info", "Nu existƒÉ loca»õii √Æn traseu.")
            return
        
        # ConfirmƒÉm actualizarea DOAR dacƒÉ nu suntem √Æn mod silen»õios
        if not is_silent:
            reply = QMessageBox.question(
                self, 
                "Actualizare Info", 
                f"Vrei sƒÉ actualizezi informa»õiile pentru toate cele {self.route_list.count()} loca»õii din traseu?\n\n"
                "Acest lucru poate dura c√¢teva secunde.",
                QMessageBox.Yes | QMessageBox.No,
                QMessageBox.Yes
            )
            
            if reply != QMessageBox.Yes:
                return
        
        try:
            log_info("Se actualizeazƒÉ informa»õiile pentru traseu...")
            
            # ColectƒÉm toate place_id-urile »ôi culorile
            route_order = []
            saved_colors = {}
            saved_locks = {}
            
            for i in range(self.route_list.count()):
                item = self.route_list.item(i)
                place_id = item.data(Qt.UserRole)
                route_order.append(place_id)
                
                widget = self.route_list.itemWidget(item)
                if widget:
                    if hasattr(widget, 'initial_color'):
                        saved_colors[place_id] = widget.initial_color
                    saved_locks[place_id] = widget.is_locked()
            
            # ActualizƒÉm informa»õiile pentru fiecare loca»õie
            updated_count = 0
            for place_id in route_order:
                try:
                    # Ob»õinem detaliile de la Google Places API
                    # EliminƒÉm filtrul 'fields' pentru a evita erorile de validare ale librƒÉriei ('types' vs 'type')
                    # Astfel primim tot obiectul, inclusiv categoriile »ôi recenziile.
                    details = gmaps_client.place(
                        place_id=place_id, 
                        language='ro'
                    )
                    
                    result = details.get('result', {})
                    name = result.get('name', selected_places.get(place_id, {}).get('name', 'Unknown'))
                    rating = result.get('rating', 'N/A')
                    reviews_count = result.get('user_ratings_total', 0)
                    
                    opening_hours = result.get('opening_hours', {})
                    if 'open_now' in opening_hours:
                        is_open_status = "Deschis acum" if opening_hours.get('open_now') else "√énchis acum"
                    else:
                        is_open_status = "Program necunoscut"
                    
                    # ActualizƒÉm dic»õionarul selected_places
                    if place_id in selected_places:
                        if isinstance(selected_places[place_id], dict):
                            selected_places[place_id]['name'] = name
                            selected_places[place_id]['rating'] = rating
                            selected_places[place_id]['reviews_count'] = reviews_count
                            selected_places[place_id]['is_open_status'] = is_open_status
                            selected_places[place_id]['types'] = result.get('types', [])
                        else:
                            # Convertim datele vechi √Æn format nou
                            selected_places[place_id] = {
                                'name': name,
                                'rating': rating,
                                'reviews_count': reviews_count,
                                'is_open_status': is_open_status,
                                'types': result.get('types', [])
                            }
                    
                    updated_count += 1
                    log_debug(f"Actualizat: {name} - ‚≠ê{rating} üìù{reviews_count} üïí{is_open_status}")
                    
                except Exception as e:
                    log_error(f"Eroare la actualizarea {place_id}: {e}")
                    continue
            
            # Reconstruim lista vizualƒÉ cu datele actualizate
            self.route_list.clear()
            
            for place_id in route_order:
                if place_id in selected_places:
                    data = selected_places[place_id]
                    
                    if isinstance(data, dict):
                        name = data.get('name', 'Unknown')
